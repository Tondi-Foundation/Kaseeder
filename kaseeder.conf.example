# Kaspa DNS Seeder Configuration File
# This file contains configuration options for the Kaspa DNS seeder
# Aligned with Go version dnsseeder configuration

# DNS server configuration
host = "seed.kaspa.org"
nameserver = "ns1.kaspa.org"
listen = "127.0.0.1:5354"

# gRPC server configuration
grpc_listen = "127.0.0.1:3737"

# Application directory for data storage
app_dir = "./data"

# Seed node address (IP:port or just IP)
# If not specified, will use DNS seed discovery
# seeder = "192.168.1.100:16111"
# default_seeder = "192.168.1.100:16111"  # Alternative name (Go version compatibility)

# Known peer addresses (comma-separated list)
# These will be used as fallback if DNS discovery fails
# known_peers = "192.168.1.100:16111,192.168.1.101:16111"
# peers = "192.168.1.100:16111,192.168.1.101:16111"  # Alternative name (Go version compatibility)

# Number of crawler threads (1-32, aligned with Go version)
threads = 8

# Minimum protocol version (0 = accept all)
min_proto_ver = 0

# Minimum user agent version (optional)
# min_ua_ver = "0.12.0"

# Network configuration
testnet = false
net_suffix = 0  # Only testnet-11 (suffix 11) is supported, aligned with Go version

# Logging configuration
log_level = "info"
nologfiles = false
error_log_file = "logs/kaseeder_error.log"

# Performance profiling (optional, port must be between 1024-65535, aligned with Go version)
# profile = "6060"

# Example for testnet-11 configuration:
# testnet = true
# net_suffix = 11
# listen = "127.0.0.1:5354"
# grpc_listen = "127.0.0.1:3737"
# app_dir = "./data-testnet-11"
# seeder = "127.0.0.1:16311"
